<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.example.temperatureapp.ui.WeightFragment">

    <TextView
        android:id="@+id/enterTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Weight"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/teal"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/fromTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/teal"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/enterTxt"/>

    <LinearLayout
        android:id="@+id/linearLay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fromTxt"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/inputMass"
            android:hint="0"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fromTxt"
            android:inputType="numberDecimal"/>


        <Spinner
            android:id="@+id/spinnerTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/enterTxt" />


    </LinearLayout>

    <TextView
        android:id="@+id/convertToTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversion"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/teal"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/linearLay1"/>



    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/convertToTV"
        android:background="@color/teal"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/resultTxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>

    </FrameLayout>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textStyle="bold"
        android:textSize="18sp"
        android:backgroundTint="@color/teal"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/frameLayout1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/verBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="ver"
        android:textStyle="bold"
        android:textSize="18sp"
        android:backgroundTint="@color/teal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/saveBtn"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>